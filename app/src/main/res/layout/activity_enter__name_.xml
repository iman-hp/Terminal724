<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Enter_Name.Enter_Name_Activity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="end"
        android:background="@color/dark_white"
        android:gravity="end">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />




        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear_show_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/shape_point_purple" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/purple" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/shape_point_purple" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/purple" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/shape_point_purple" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/purple" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/purple" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/tick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ir.terminal724.www.terminal724.MyView.My_Textview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="آماده سفر"
                android:textColor="@color/purple"
                android:textSize="11sp" />

            <ir.terminal724.www.terminal724.MyView.My_Textview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="پرداخت"
                android:textColor="@color/purple"
                android:textSize="11sp" />

            <ir.terminal724.www.terminal724.MyView.My_Textview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="مشخصات مسافر"
                android:textColor="@color/purple"
                android:textSize="11sp" />

            <ir.terminal724.www.terminal724.MyView.My_Textview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="تعداد مسافر "
                android:textColor="@color/purple"
                android:textSize="11sp" />

            <ir.terminal724.www.terminal724.MyView.My_Textview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="right"
                android:text="انتخاب پرواز"
                android:textColor="@color/purple"
                android:textSize="11sp" />


        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="@dimen/standard_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_expa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <ir.terminal724.www.terminal724.MyView.My_Bold_TextView
                android:id="@+id/txt_title_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_below="@+id/recycler_expa"
                android:layout_centerHorizontal="true"
                android:text="اطلاعات سرپرست"/>
            <LinearLayout
                android:id="@+id/linear_phones"
                android:layout_below="@+id/txt_title_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/long_margin"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="4dp"
                android:background="@drawable/custom_shape_purple_edittext">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/homecall" />

                <ir.terminal724.www.terminal724.MyView.My_Textview
                    android:id="@+id/txt_home_phone_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.8"
                    android:hint=" تلفن منزل"
                    android:padding="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/long_margin"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="4dp"
                android:background="@drawable/custom_shape_purple_edittext">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/thelephone" />

                <ir.terminal724.www.terminal724.MyView.My_Textview
                    android:id="@+id/txt_mobile_phone_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.8"
                    android:hint="تلفن همراه"
                    android:padding="8dp" />
            </LinearLayout>
            </LinearLayout>
            <ir.terminal724.www.terminal724.MyView.My_Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_phones"
                android:layout_marginTop="@dimen/long_margin"
                android:textColor="@color/dark_white"
                android:textSize="20sp"
                android:text="تایید و ادامه"
                android:background="@drawable/custom_button_purple"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>